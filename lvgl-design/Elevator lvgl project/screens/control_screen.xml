<screen name="control_screen">
    <!-- Main screen with purple background -->
    <obj type="obj">
        <size width="480" height="800"/>
        <bg_color value="UI_COLOR_BG"/>
        <scrollable value="false"/>

        <!-- White panel container -->
        <obj name="panel" type="obj">
            <size width="PANEL_WIDTH" height="PANEL_HEIGHT"/>
            <align type="top_mid" y="-4"/>
            <bg_color value="UI_COLOR_PANEL"/>
            <radius value="12"/>
            <pad_all value="16"/>
            <scrollable value="false"/>

            <!-- System Status Section -->
            <obj name="status_section" type="obj">
                <size width="428" height="160"/>
                <pos x="0" y="0"/>
                <bg_opa value="0"/>
                <border_width value="0"/>
                <scrollable value="false"/>

                <!-- Gateway Status Card -->
                <obj name="gateway_card" type="obj">
                    <size width="200" height="70"/>
                    <pos x="0" y="0"/>
                    <style base="style_status_card"/>

                    <obj type="label">
                        <text value="Gateway"/>
                        <pos x="12" y="10"/>
                        <text_color value="#FFFFFF"/>
                    </obj>

                    <obj name="gateway_status_label" type="label">
                        <text value="Online"/>
                        <pos x="12" y="40"/>
                        <text_color value="UI_COLOR_UP"/>
                    </obj>
                </obj>

                <!-- Current Floor Card -->
                <obj name="floor_card" type="obj">
                    <size width="200" height="70"/>
                    <pos x="228" y="0"/>
                    <style base="style_status_card"/>

                    <obj type="label">
                        <text value="Current Floor"/>
                        <pos x="12" y="10"/>
                        <text_color value="#FFFFFF"/>
                    </obj>

                    <obj name="current_floor_label" type="label">
                        <text value="1"/>
                        <pos x="12" y="40"/>
                        <text_color value="UI_COLOR_ELEV"/>
                    </obj>
                </obj>

                <!-- Active Calls Card -->
                <obj name="calls_card" type="obj">
                    <size width="200" height="70"/>
                    <pos x="0" y="90"/>
                    <style base="style_status_card"/>

                    <obj type="label">
                        <text value="Active Calls"/>
                        <pos x="12" y="10"/>
                        <text_color value="#FFFFFF"/>
                    </obj>

                    <obj name="active_calls_label" type="label">
                        <text value="0"/>
                        <pos x="12" y="40"/>
                        <text_color value="UI_COLOR_LOAD"/>
                    </obj>
                </obj>

                <!-- RSSI Card -->
                <obj name="rssi_card" type="obj">
                    <size width="200" height="70"/>
                    <pos x="228" y="90"/>
                    <style base="style_status_card"/>

                    <obj type="label">
                        <text value="Signal (RSSI)"/>
                        <pos x="12" y="10"/>
                        <text_color value="#FFFFFF"/>
                    </obj>

                    <obj name="rssi_label" type="label">
                        <text value="-65 dBm"/>
                        <pos x="12" y="40"/>
                        <text_color value="#FFFFFF"/>
                    </obj>
                </obj>
            </obj>

            <!-- Log Panel Section -->
            <obj name="log_panel" type="obj">
                <size width="428" height="500"/>
                <pos x="0" y="180"/>
                <style base="style_log_panel"/>
                <scrollable value="true"/>

                <!-- Title -->
                <obj type="label">
                    <text value="System Log"/>
                    <pos x="12" y="12"/>
                    <text_color value="#FFFFFF"/>
                </obj>

                <!-- Log Text Area -->
                <obj name="log_textarea" type="textarea">
                    <size width="404" height="440"/>
                    <pos x="12" y="40"/>
                    <style base="style_log_ta"/>
                    <text value="[SYSTEM] Display online&#10;[GATEWAY] Connected&#10;[INFO] Ready"/>
                    <scrollable value="true"/>
                </obj>
            </obj>

        </obj>

        <!-- Navigation bar at bottom (reused from shaft_screen) -->
        <obj name="nav_bar" type="obj">
            <size width="480" height="NAV_HEIGHT"/>
            <align type="bottom_mid" y="0"/>
            <bg_color value="UI_COLOR_NAV"/>
            <radius value="0"/>
            <pad_all value="10"/>
            <scrollable value="false"/>

            <!-- SHAFT button -->
            <obj name="btn_shaft" type="btn">
                <size width="140" height="40"/>
                <pos x="10" y="10"/>
                <style base="style_nav_btn"/>

                <obj type="label">
                    <text value="SHAFT"/>
                    <align type="center"/>
                </obj>
            </obj>

            <!-- GRID button -->
            <obj name="btn_grid" type="btn">
                <size width="140" height="40"/>
                <pos x="170" y="10"/>
                <style base="style_nav_btn"/>

                <obj type="label">
                    <text value="GRID"/>
                    <align type="center"/>
                </obj>
            </obj>

            <!-- CONTROL button (active) -->
            <obj name="btn_control" type="btn">
                <size width="140" height="40"/>
                <pos x="330" y="10"/>
                <style base="style_nav_btn"/>
                <style state="default" base="style_nav_btn_active"/>

                <obj type="label">
                    <text value="CONTROL"/>
                    <align type="center"/>
                </obj>
            </obj>
        </obj>

    </obj>
</screen>
