<screen name="shaft_screen">
    <!-- Main screen with purple background -->
    <obj type="obj">
        <size width="480" height="800"/>
        <bg_color value="UI_COLOR_BG"/>
        <scrollable value="false"/>

        <!-- White panel container -->
        <obj name="panel" type="obj">
            <size width="PANEL_WIDTH" height="PANEL_HEIGHT"/>
            <align type="top_mid" y="-4"/>
            <bg_color value="UI_COLOR_PANEL"/>
            <radius value="12"/>
            <pad_all value="16"/>
            <scrollable value="false"/>

            <!-- Column containers will be added dynamically in code -->
            <!-- Due to the need for 37 floors, we'll create these programmatically -->

        </obj>

        <!-- Navigation bar at bottom -->
        <obj name="nav_bar" type="obj">
            <size width="480" height="NAV_HEIGHT"/>
            <align type="bottom_mid" y="0"/>
            <bg_color value="UI_COLOR_NAV"/>
            <radius value="0"/>
            <pad_all value="10"/>
            <scrollable value="false"/>

            <!-- SHAFT button -->
            <obj name="btn_shaft" type="btn">
                <size width="140" height="40"/>
                <pos x="10" y="10"/>
                <style base="style_nav_btn"/>
                <style state="default" base="style_nav_btn_active"/>

                <obj type="label">
                    <text value="SHAFT"/>
                    <align type="center"/>
                </obj>
            </obj>

            <!-- GRID button -->
            <obj name="btn_grid" type="btn">
                <size width="140" height="40"/>
                <pos x="170" y="10"/>
                <style base="style_nav_btn"/>

                <obj type="label">
                    <text value="GRID"/>
                    <align type="center"/>
                </obj>
            </obj>

            <!-- CONTROL button -->
            <obj name="btn_control" type="btn">
                <size width="140" height="40"/>
                <pos x="330" y="10"/>
                <style base="style_nav_btn"/>

                <obj type="label">
                    <text value="CONTROL"/>
                    <align type="center"/>
                </obj>
            </obj>
        </obj>

    </obj>
</screen>
