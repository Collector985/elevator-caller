<globals>
    <api>
        <!-- Add <enumdefs> here -->
    </api>

    <consts>
        <!-- Color Palette for Elevator Display -->
        <color name="UI_COLOR_BG" value="#667eea"/>        <!-- Screen background (purple gradient) -->
        <color name="UI_COLOR_PANEL" value="#FFFFFF"/>     <!-- Panel background (white) -->
        <color name="UI_COLOR_SHAFT" value="#2c3e50"/>     <!-- Shaft/containers (dark gray) -->
        <color name="UI_COLOR_ELEV" value="#3498db"/>      <!-- Current floor (blue) -->
        <color name="UI_COLOR_UP" value="#2ecc71"/>        <!-- UP calls (green) -->
        <color name="UI_COLOR_DOWN" value="#e74c3c"/>      <!-- DOWN calls (red) -->
        <color name="UI_COLOR_LOAD" value="#f39c12"/>      <!-- LOAD calls (orange) -->
        <color name="UI_COLOR_NAV" value="#34495e"/>       <!-- Nav bar (dark slate) -->
        <color name="UI_COLOR_INACTIVE" value="#9ea3b4"/>  <!-- Inactive buttons (gray) -->

        <!-- Layout Constants -->
        <px name="PANEL_WIDTH" value="460"/>
        <px name="PANEL_HEIGHT" value="720"/>
        <px name="NAV_HEIGHT" value="60"/>
        <px name="FLOOR_ROW_HEIGHT" value="34"/>
        <px name="FLOOR_CARD_HEIGHT" value="32"/>
        <px name="CALL_BTN_SIZE" value="28"/>
    </consts>

    <styles>
        <!-- Floor Card Style -->
        <style name="style_floor_card">
            <bg_color value="#34495e"/>
            <bg_opa value="255"/>
            <radius value="8"/>
            <border_width value="0"/>
            <pad_all value="4"/>
            <text_color value="#FFFFFF"/>
        </style>

        <!-- Current Floor Style -->
        <style name="style_floor_current">
            <bg_color value="#3498db"/>
            <bg_opa value="255"/>
            <outline_width value="2"/>
            <outline_color value="#FFFFFF"/>
            <outline_opa value="204"/>
        </style>

        <!-- Navigation Button Style -->
        <style name="style_nav_btn">
            <bg_color value="#2c3e50"/>
            <bg_opa value="255"/>
            <radius value="10"/>
            <border_width value="0"/>
            <text_color value="#FFFFFF"/>
        </style>

        <!-- Navigation Button Active Style -->
        <style name="style_nav_btn_active">
            <bg_color value="#3498db"/>
            <bg_opa value="255"/>
        </style>

        <!-- Log Panel Style (for CONTROL view) -->
        <style name="style_log_panel">
            <bg_color value="#111111"/>
            <bg_opa value="255"/>
            <radius value="8"/>
            <border_width value="0"/>
        </style>

        <!-- Log Text Area Style (for CONTROL view) -->
        <style name="style_log_ta">
            <bg_color value="#111111"/>
            <bg_opa value="0"/>
            <text_color value="#2ecc71"/>
        </style>

        <!-- Status Card Style (for CONTROL view) -->
        <style name="style_status_card">
            <bg_color value="#34495e"/>
            <bg_opa value="255"/>
            <radius value="8"/>
            <border_width value="0"/>
            <pad_all value="12"/>
        </style>
    </styles>

    <subjects>
        <int name="current_floor" initial="1"/>
        <int name="total_floors" initial="37"/>
    </subjects>

    <images>
        <!-- Add <file> or <data> tags here -->
    </images>

    <fonts>
        <!-- Montserrat fonts for elevator display -->
        <!-- Note: Add actual font files to fonts/ folder -->
        <!-- <bin name="montserrat_16"/> -->
        <!-- <bin name="montserrat_18"/> -->
        <!-- <bin name="montserrat_22"/> -->
    </fonts>
</globals>